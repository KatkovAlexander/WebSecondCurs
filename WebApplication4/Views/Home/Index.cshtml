@model IEnumerable<WebApplication4.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create">Add product</a>

<form method="get" action="~/Home/Index">
    <input type="text" value="" name="text"/>
    <input type="submit" value="Поиск"/>
</form>

<table class="table">
    <tr><td>Category</td><td>Brand</td><td>Collection</td>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Category</td>
            <td>@item.Brand</td>
            <td>@item.Collection</td>
            <td>
                <button type="button" class="btn btn-light">
                    <a href="~/Home/Details/@item.Id">Детали</a>
                </button>
            </td>
            <td>
                <button type="button" class="btn btn-light">
                    <a href="~/Home/Edit/@item.Id">Изменить</a>
                </button>
            </td>
            <td>
                <button type="button" class="btn btn-light">
                    <a href="~/Home/Delete/@item.Id">Удалить</a>
                </button>
            </td>
        </tr>
    }
    
</table>